<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:VEGASTAR.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="VEGASTAR.Views.MainWindow"
        Title="Title">
    
    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    
    <Grid RowDefinitions="Auto,*" Background="White">
        <!--Header Menu-->
        <Grid  Background="#353F47" Height="60">
           <Grid Margin="50 0" ColumnDefinitions="Auto,*,Auto">
               <StackPanel Orientation="Horizontal">
                   <TextBlock Margin="0 0 10 0" FontSize="15" FontWeight="Light" VerticalAlignment="Center" Foreground="White">
                       Загрузка
                   </TextBlock>
                   <TextBlock Margin="0 0 10 0" FontSize="15" FontWeight="Light" VerticalAlignment="Center" Foreground="White">
                       Работа с архивами
                   </TextBlock>
                   <TextBlock Margin="0 0 10 0" FontSize="15" FontWeight="Light" VerticalAlignment="Center" Foreground="White">
                       Работа с картами
                   </TextBlock>
               </StackPanel>
               <StackPanel Grid.Column="2" Orientation="Horizontal">
                   <TextBlock Margin="0 0 10 0" FontSize="15" FontWeight="Light" VerticalAlignment="Center" Foreground="White">
                       Петров Б.Ю. :
                   </TextBlock>
               </StackPanel>
           </Grid>
       </Grid>
    </Grid>
</Window>
